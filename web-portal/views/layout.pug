    link(rel="icon" sizes="64x64" type="image/png" href="/images/icons/Interlisp-FavIcon-64x64.png")
    link(rel="icon" sizes="72x72" type="image/png" href="/images/icons/Interlisp-FavIcon-72x72.png")
